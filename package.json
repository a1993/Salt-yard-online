{
  "name": "salt-yard-online-theme",
  "version": "1.0.0",
  "description": "Salt Yard Online - Shopify Theme",
  "private": true,
  "scripts": {
    "dev": "shopify theme dev",
    "push": "shopify theme push",
    "pull": "shopify theme pull",
    "check": "shopify theme check",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "lint:liquid": "shopify theme check",
    "lint:js": "eslint assets/*.js --fix",
    "lint": "npm run lint:liquid && npm run lint:js",
    "validate": "npm run format && npm run lint",
    "build:css": "postcss ./assets/tailwind.css -o ./assets/tailwind.output.css --minify",
    "watch:css": "postcss ./assets/tailwind.css -o ./assets/tailwind.output.css --watch"
  },
  "devDependencies": {
    "@shopify/prettier-plugin-liquid": "^1.5.3",
    "@shopify/theme-check-node": "^2.0.0",
    "@tailwindcss/postcss": "^4.1.17",
    "autoprefixer": "^10.4.22",
    "eslint": "^8.57.0",
    "eslint-config-prettier": "^9.1.0",
    "postcss": "^8.5.6",
    "postcss-cli": "^11.0.1",
    "prettier": "^3.2.5",
    "tailwindcss": "^4.1.17"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "keywords": [
    "shopify",
    "theme",
    "ecommerce"
  ]
}
